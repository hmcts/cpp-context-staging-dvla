{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/cpp/stagingdvla/event/driver-audit-record.json",
  "description": "The details of the driver for auditing purpose",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "userId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "userEmail": {
      "type": "string"
    },
    "dateTime": {
      "type": "string",
      "format": "date"
    },
    "searchReason": {
      "$ref": "http://justice.gov.uk/cpp/stagingdvla/driver-search-reason.json"
    },
    "searchCriteria": {
      "$ref": "http://justice.gov.uk/cpp/stagingdvla/driver-search-criteria.json"
    }
  },
  "required": [
    "userId",
    "userEmail",
    "searchReason",
    "searchCriteria"
  ],
  "additionalProperties": false
}