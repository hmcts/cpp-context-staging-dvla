<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="crete-driver-audit-report-table"
               logicalFilePath="005-create-driver-audit-report-table.xml"
               author="cpp.context.staging.dvla">
        <createTable tableName="driver_audit_report">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="date_time" type="DATETIME TZ">
                <constraints nullable="false"/>
            </column>
            <column name="report_search_criteria" type="TEXT">
                <constraints nullable="false" />
            </column>
            <column name="status" type="VARCHAR(16)">
                <constraints nullable="false" />
            </column>
            <column name="report_file_id" type="VARCHAR(16)">
            </column>
            <column name="material_id" type="UUID">
            </column>
        </createTable>

        <createIndex tableName="driver_audit_report" indexName="driver_audit_report_user_id_idx">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="driver_audit_report" indexName="driver_audit_report_date_time_idx">
            <column name="date_time"/>
        </createIndex>
        <rollback>
            <dropTable tableName="driver_audit_report"/>
        </rollback>

    </changeSet>
</databaseChangeLog>
