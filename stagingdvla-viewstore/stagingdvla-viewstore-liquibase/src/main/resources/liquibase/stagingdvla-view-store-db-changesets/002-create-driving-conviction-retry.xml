<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-driving-conviction-retry"
               logicalFilePath="002-create-driving-conviction-retry.xml"
               author="cpp.context.staging.dvla">
        <createTable tableName="driving_conviction_retry">
            <column name="conviction_id" type="UUID">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="master_defendant_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="created_date_time" type="DATETIME TZ">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="driving_conviction_retry"/>
        </rollback>

    </changeSet>
</databaseChangeLog>
