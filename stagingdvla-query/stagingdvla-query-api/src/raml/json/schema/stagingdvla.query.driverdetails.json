{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/stagingdvla/stagingdvla.query.driverdetails.json",
  "type": "object",
  "properties": {
    "results": {
      "type": "array",
      "items": {
        "driverSummary": {
          "type": "object",
          "additionalProperties": false,
          "description": "Details of a driver used to determine whether to get a driver's full details.",
          "required": [
            "drivingLicenceNumber",
            "lastName",
            "gender"
          ],
          "properties": {
            "drivingLicenceNumber": {
              "type": "string",
              "example": "ABCDE123456AB1AB",
              "description": "A UK driving licence number"
            },
            "firstNames": {
              "type": "string",
              "example": "John",
              "description": "first name(s) of a driver"
            },
            "lastName": {
              "type": "string",
              "example": "Doe",
              "description": "last name of a driver"
            },
            "dateOfBirth": {
              "type": "string",
              "description": "The driver's date of birth.",
              "format": "date",
              "maxLength": 10,
              "minLength": 4,
              "example": "1980-09-08"
            },
            "gender": {
              "type": "string",
              "enum": [
                "Male",
                "Female"
              ]
            },
            "postcode": {
              "type": "string",
              "pattern": "^(([Gg][Ii][Rr]\\s?0[Aa]{2})|((([A-Za-z][0-9]{1,2})|(([A-Za-z][A-Ha-hJ-Yj-y][0-9]{1,2})|(([A-Za-z][0-9][A-Za-z])|([A-Za-z][A-Ha-hJ-Yj-y][0-9]?[A-Za-z]))))\\s?[0-9][A-Za-z]{2}))$",
              "maxLength": 8,
              "minLength": 6,
              "example": "SA22 9FD"
            },
            "driverRedirect": {
              "type": "boolean",
              "description": "Indicates if record was redirected from cross reference record."
            }
          }
        }
      }
    }
  }
}
